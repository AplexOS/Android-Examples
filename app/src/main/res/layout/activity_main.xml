<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.aplex.audiocontrol.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/powerOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POWER_ONOFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/sysSelectLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYS_SELECT_LOW" />

            <Button
                android:id="@+id/sysSelectHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYS_SELECT_HIGH" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/spkMode1Low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPK_MODE1_LOW" />

            <Button
                android:id="@+id/spkMode1High"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPK_MODE1_HIGH" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/gpioAnt3Low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPIO_ANT3_LOW" />

            <Button
                android:id="@+id/gpioAnt3High"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPIO_ANT3_HIGH" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_gravity="bottom"/>

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
